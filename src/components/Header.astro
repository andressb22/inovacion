---
interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;
---

<div class="container">
  <div class="containerMenu" id="containerMenu">
    <div class="close" id="close">
      <svg  width="30"  height="30" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
        ><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
        <path
          d="M256 48a208 208 0 1 1 0 416 208 208 0 1 1 0-416zm0 464A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM175 175c-9.4 9.4-9.4 24.6 0 33.9l47 47-47 47c-9.4 9.4-9.4 24.6 0 33.9s24.6 9.4 33.9 0l47-47 47 47c9.4 9.4 24.6 9.4 33.9 0s9.4-24.6 0-33.9l-47-47 47-47c9.4-9.4 9.4-24.6 0-33.9s-24.6-9.4-33.9 0l-47 47-47-47c-9.4-9.4-24.6-9.4-33.9 0z"
        ></path></svg
      >
    </div>
    <div>
      <h2>Men√∫</h2>
    </div>
    <ul>
      <a href="/inovacion/"><li>Inicio</li></a>
      <a href="/inovacion/Ento"><li>Ento</li></a>
      <a href="/inovacion/Barco"><li>Barco</li></a>
      <a href="/inovacion/AgroEfens"><li>AgroEfens</li></a>
      <a href="/inovacion/Geros"><li>Geros</li></a>
      <a href="/inovacion/Guajava"> <li>Guajava</li></a>
      <a href="/inovacion/MobiliarioAzul"><li>Mobiliario Azul</li></a>
      <a href="/inovacion/MobiliarioSalsa"><li>Mobiliario Salsa</li></a>
      <a href="/inovacion/Patineta"><li>Patineta</li></a>
      <a><li>Fichas tecnicas</li></a>
    </ul>
  </div>

  <div class="cont-image" id="cont-image">
    <img src="/inovacion/logo.jpg" />
  </div>
  <h1>{title}</h1>
  <div class="cont-images">
    <img class="deco" src="/inovacion/deco1.png" />
    <img class="image" src={image} />
  </div>
</div>

<script>
  const contImage = document.querySelector("#cont-image");
  const containerMenu = document.querySelector("#containerMenu");
  const close = document.querySelector('#close')
  const handleClick = () => {
    containerMenu.classList.add("active");
  };

  const closeMenu = () =>{
    containerMenu.classList.remove("active");
  }

  contImage.addEventListener("click", handleClick);
  close.addEventListener('click',closeMenu)
</script>
<style>
  h1 {
    color: #446c8b;
    padding-left: 30px;
    margin-top: 40px;
    font-size: 45px;
    font-weight: 800;
    position: relative;
    z-index: 100;
  }
  a {
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: #fff;
  }
  h2 {
    color: #fff;
    font-size: 40px;
  }
  .close{
    position: absolute;
    top: 20px;
    left: 20px;
  }
  .close svg{
    position: absolute;
    top: 20px;
    left: 20px;
    fill: #fff;
    cursor: pointer;
  }
  .containerMenu.active {
    top: 0;
    left: 0;
    transition: all 0.5s ease;
  }
  .containerMenu {
    position: fixed;
    left: 100%;
    transition: all .500s ease;
    z-index: 10000;
    width: 100vw;
    height: 100vh;
    background-color: #446c8b;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .containerMenu > ul {
    height: 70%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    color: #fff;
  }

  .containerMenu > ul li {
    width: 100%;
    height: 100%;
    list-style: none;
    font-size: 20px;
    font-weight: 700;
    border-bottom: 2px solid #2a4b64;
    display: flex;
    align-items: center;
    padding-left: 50px;
  }
  .container {
    background-color: #fff;
    position: fixed;
    box-sizing: border-box;
    margin-bottom: 400px;
    z-index: 10;
  }
  .cont-images {
    position: relative;
    margin-top: 70px;
  }
  .cont-image {
    width: 100vw;
    display: flex;
    flex-direction: row-reverse;
    padding-right: 40px;
    padding-top: 20px;
  }
  .cont-image > img {
    width: 20vw;
  }
  .deco {
    width: 100%;
  }
  .image {
    position: absolute;
    top: -90px;
    left: -40px;
    width: 95%;
  }
</style>
